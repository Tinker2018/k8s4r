# Build stage
FROM golang:1.21-alpine AS builder

WORKDIR /workspace

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY api/ api/
COPY pkg/ pkg/
COPY cmd/server/ cmd/server/

# Build
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -a -o server cmd/server/main.go

# Runtime stage
FROM alpine:latest

WORKDIR /

COPY --from=builder /workspace/server .

USER 65532:65532

ENTRYPOINT ["/server"]
